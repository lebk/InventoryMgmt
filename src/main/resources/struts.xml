<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.action.extension" value="action," />
	<constant name="struts.multipart.maxSize" value="524288000" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.convention.action.disableScanning"
		value="true" />

	<package name="default" extends="struts-default" namespace="/">

		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>


		<action name="login" method="authUser" class="com.lebk.action.UserAction">
			<result name="success">index.jsp</result>
			<result name="error">Login.jsp</result>
		</action>
		<action name="logout" method="logout" class="com.lebk.action.UserAction">
			<result name="success">Login.jsp</result>
		</action>


		<action name="*tilesAction" method="{1}"
			class="com.lebk.action.TilesAction">
			<result name="showProductList" type="tiles">showProductList</result>
			<result name="jobmanage" type="tiles">jobmanage</result>
			<result name="showvmlist" type="tiles">showvmlist</result>
			<result name="admin" type="tiles">admin</result>

			<result name="showUserList" type="tiles">showUserList</result>
			<result name="displayUser" type="tiles">displayUser</result>
			<result name="aboutSystem" type="tiles">aboutSystem</result>

			<result name="showProductTypeList" type="tiles">showProductTypeList</result>
			<result name="showProductSizeList" type="tiles">showProductSizeList</result>
			<result name="showProductColorList" type="tiles">showProductColorList</result>

			<result name="displayAccountandPasswordSetting" type="tiles">displayAccountandPasswordSetting</result>


			<result name="startJob" type="tiles">startJob</result>

		</action>

		<action name="deleteUsertilesAction" method="deleteUser" class="com.lebk.action.TilesAction">
			<result name="success" type="redirectAction">showUserListtilesAction</result>
			<result name="error" type="tiles">deleteUserError</result>
		</action>
		<action name="updateUsertilesAction" method="updateUser"
			class="com.lebk.action.TilesAction">
			<result name="success" type="redirectAction">showUserListtilesAction</result>
			<result name="error" type="tiles">updateUserError</result>
		</action>
		<action name="addUsertilesAction" method="addUser"
			class="com.lebk.action.TilesAction">
			<result name="success" type="redirectAction">showUserListtilesAction</result>
			<result name="error" type="tiles">addUserError</result>
		</action>

		<action name="writeExtraOSinDBtilesAction" method="writeExtraOSinDB"
			class="com.lebk.action.TilesAction">
			<result name="success" type="redirectAction">showOSListtilesAction</result>
			<result name="error" type="tiles">writeExtraOSinDBError</result>
		</action>
		<action name="updateOsAccountandPasswordResulttilesAction"
			method="updateOsAccountandPassword" class="com.lebk.action.TilesAction">
			<result name="success" type="redirectAction">showOSListtilesAction</result>
			<result name="error" type="tiles">updateOsAccountandPasswordError</result>
		</action>

		<action name="updateProductNameResulttilesAction" method="updateProductName"
			class="com.lebk.action.TilesAction">
			<result name="success" type="redirectAction">showProductSizeListtilesAction</result>
			<result name="error" type="tiles">updateProductNameError</result>
		</action>


		<action name="showProductDetailsListtilesAction" method="showProductDetailsList"
			class="com.lebk.action.TilesAction">
			<result name="success" type="tiles">showProductDetailsList</result>
		</action>

	</package>
</struts>


